<li>
  <%= gravatar_for user, size: 45 %>
  <%= link_to user.name, user %> 

  <% if current_user.admin? && !current_user?(user) %>
  	| <%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>

  <% if current_user?(user) %>
  	<div class="to-right">
  		This is you! hi!
  	</div>
  <% end %>
</li>